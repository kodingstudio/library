<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <LinearLayout
        android:id="@+id/layout_menu"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:gravity="center">



        <ImageView
            android:id="@+id/image_menu"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:tint="?attr/colorOrange"></ImageView>


        <com.haris.ecommerce.presentationutil.ui.textviewutil.SofiaProTextview
            android:id="@+id/txt_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sm_txt_size"
            android:layout_marginTop="6dp"
            android:textColor="?attr/colorOrange"
            app:sofiaProFontFamily="regular"
            android:text="@string/home"></com.haris.ecommerce.presentationutil.ui.textviewutil.SofiaProTextview>



    </LinearLayout>


</RelativeLayout>